  <HediffDef Name="MAImplantHediffBase" Abstract="True">
    <hediffClass>Hediff_Implant</hediffClass>
    <defaultLabelColor>(0.65, 0.3, 0.9)</defaultLabelColor>
    <isBad>false</isBad>
  </HediffDef>
  <HediffDef ParentName="MAImplantHediffBase">
    <defName>MetalPlate</defName>
    <label>metal plate</label>
    <spawnThingOnRemoved>MetalPlate</spawnThingOnRemoved>
    <stages>
      <li>
        <statOffsets>
          <PsychicSensitivity>-0.4</PsychicSensitivity>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  <HediffDef ParentName="MAImplantHediffBase">
    <defName>CoProcess</defName>
    <label>co-processor</label>
    <spawnThingOnRemoved>CoProcess</spawnThingOnRemoved>
    <stages>
      <li>
        <statOffsets>
          <GlobalLearningFactor>0.3</GlobalLearningFactor>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  <HediffDef ParentName="MAImplantHediffBase">
    <defName>ToxinScrub</defName>
    <label>toxin scrubber</label>
    <spawnThingOnRemoved>ToxinScrub</spawnThingOnRemoved>
    <stages>
      <li>
        <statOffsets>
          <ToxicSensitivity>-0.5</ToxicSensitivity>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  <HediffDef ParentName="MAImplantHediffBase">
    <defName>GunSlinger</defName>
    <label>gunslinger</label>
    <spawnThingOnRemoved>GunSlinger</spawnThingOnRemoved>
    <stages>
      <li>
        <statOffsets>
          <AimingDelayFactor>-0.5</AimingDelayFactor>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  <HediffDef ParentName="MAImplantHediffBase">
    <defName>ImmuneBoost</defName>
    <label>immune booster</label>
    <spawnThingOnRemoved>ImmuneBoost</spawnThingOnRemoved>
    <stages>
      <li>
        <statOffsets>
          <ImmunityGainSpeed>0.2</ImmunityGainSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
