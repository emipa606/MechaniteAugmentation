  <HediffDef ParentName="MAImplantHediffBase">
    <defName>MetalPlate</defName>
    <label>metal plate</label>
	<description>metal plate</description>
    <spawnThingOnRemoved>MetalPlate</spawnThingOnRemoved>
	<stages>
      <li>
    <statOffsets>
       <PsychicSensitivity>-0.4</PsychicSensitivity>
    </statOffsets>
      </li>
    </stages>

  </HediffDef>
  

  <HediffDef ParentName="MAImplantHediffBase">
    <defName>CoProcess</defName>
    <label>co-processor</label>
	<description>co-processor</description>
    <spawnThingOnRemoved>CoProcess</spawnThingOnRemoved>
	<stages>
      <li>
    <statOffsets>
       <GlobalLearningFactor>0.3</GlobalLearningFactor>
    </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="MAImplantHediffBase">
    <defName>ToxinScrub</defName>
