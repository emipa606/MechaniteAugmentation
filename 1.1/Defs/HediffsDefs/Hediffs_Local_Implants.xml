    <spawnThingOnRemoved>ToxinScrub</spawnThingOnRemoved>
	<stages>
      <li>
    <statOffsets>
       <ToxicSensitivity>-0.5</ToxicSensitivity>
    </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="MAImplantHediffBase">
    <defName>GunSlinger</defName>
    <label>gunslinger</label>
	<description>gunslinger</description>
    <spawnThingOnRemoved>GunSlinger</spawnThingOnRemoved>
	<stages>
      <li>
    <statOffsets>
       <AimingDelayFactor>-0.5</AimingDelayFactor>
    </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef ParentName="MAImplantHediffBase">
    <defName>ImmuneBoost</defName>
    <label>immune booster</label>
	<description>immune booster</description>
    <spawnThingOnRemoved>ImmuneBoost</spawnThingOnRemoved>
	<stages>
      <li>
    <statOffsets>
       <ImmunityGainSpeed>0.2</ImmunityGainSpeed>
    </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
